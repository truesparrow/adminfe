{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "allowJs": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "baseUrl": "./",
        "outDir": "./out"
    },
    "include": [
        "./src/server/**/*",
        "./src/shared/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}
